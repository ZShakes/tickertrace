# Flask Configuration
# Set to 'true' to enable debug mode (development only)
FLASK_DEBUG=false

# Host to bind the server to
# Use 127.0.0.1 for local access only (recommended for production)
# Use 0.0.0.0 to allow external connections (development only)
FLASK_HOST=127.0.0.1

# Port to run the server on
FLASK_PORT=5000